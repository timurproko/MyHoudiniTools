<?xml version="1.0" encoding="UTF-8"?>
<menuDocument>
    <menu>
    <subMenu id="asset_bar_submenu">
    <label>Asset Definition Toolbar</label>
    <insertBefore />
<scriptMenuStripRadio>
    <variableName>asset_bar_val</variableName>
<scriptCode>
<![CDATA[
import mytools
mytools.sync_asset_bar_menu_global(force=True)
]]>
</scriptCode>

    <scriptRadioItem id="h.asset_bar_all">
        <label>Show Always</label>
        <variableValue>0</variableValue>
<scriptCode>
<![CDATA[
import mytools
mytools.set_asset_def_toolbar_state(0)
]]>
</scriptCode>
    </scriptRadioItem>
        <scriptRadioItem id="h.asset_bar_multi">
        <label>Show When Needed</label>
        <variableValue>1</variableValue>
<scriptCode>
<![CDATA[
import mytools
mytools.set_asset_def_toolbar_state(1)
]]>
</scriptCode>
    </scriptRadioItem>
    <scriptRadioItem id="h.asset_bar_current">
        <label>Show Current Definition</label>
        <variableValue>2</variableValue>

<scriptCode>
<![CDATA[
import mytools
mytools.set_asset_def_toolbar_state(2)
]]>
</scriptCode>
    </scriptRadioItem>
    <scriptRadioItem id="h.asset_bar_hide">
        <label>Hide</label>
        <variableValue>3</variableValue>
<scriptCode>
<![CDATA[
import mytools
mytools.set_asset_def_toolbar_state(3)
]]>
</scriptCode>
    </scriptRadioItem>
</scriptMenuStripRadio>
    </subMenu>
</menu>
</menuDocument>